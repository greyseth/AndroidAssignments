<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/nikInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NIK"
            android:background="@drawable/bg_inputfield"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/alamatInput"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:gravity="start"
            android:hint="Alamat"
            android:background="@drawable/bg_inputfield"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/kotaInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kota"
            android:background="@drawable/bg_inputfield"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"/>

        <Spinner
            android:id="@+id/kelaminInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_inputfield"
            android:padding="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitBtn"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="8dp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_accept"/>
        <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/errorContainer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_semitrans"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:padding="12dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="Something went wrong"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text=":("
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/errorConfirmBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/bg_inputfield"
                android:textStyle="bold"
                android:text="OK"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>